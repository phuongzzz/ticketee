<div id="ticket">
  <header>
    <h1><%= @project.name %></h1>
  </header>

  <header>
    <h2><%= @ticket.name %></h2>

    <ul id="actions">
      <li>
        <%= link_to "Edit Ticket", [:edit, @project, @ticket] %>
        <%= link_to "Delete Ticket", [@project, @ticket], method: :delete,
          data: { confirm: "Are you sure?" }, class: "delete"
        %>
      </li>
    </ul>
  </header>

  <%= simple_format @ticket.description %>
</div>
